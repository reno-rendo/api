{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3.2.0"
    }
  },
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/health"
    },
    {
      "source": "/api/home",
      "destination": "/api/home"
    },
    {
      "source": "/api/genres",
      "destination": "/api/genres"
    },
    {
      "source": "/api/search",
      "destination": "/api/search"
    },
    {
      "source": "/api/schedule",
      "destination": "/api/schedule"
    },
    {
      "source": "/api/anime/:slug",
      "destination": "/api/anime/:slug"
    },
    {
      "source": "/api/episodes/:slug",
      "destination": "/api/episodes/:slug"
    }
  ]
}